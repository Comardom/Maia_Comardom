<style>





    .designDPM-wrapper {
        display: flex;
        justify-content: center;
        align-items: center;
        //padding: 2rem 1rem;
        height: 100%;
        box-sizing: border-box;
        position: relative;
        z-index: 10;
    }

    .designDPM-side {
        width: 5rem;
        height: 100%;
        overflow: hidden;
        position: relative;
    }

    .designDPM-scroll {
        display: flex;
        flex-direction: column;
        animation: scrollLoop 5s linear infinite;
        will-change: transform;
    }

    .designDPM-scroll img {
        width: 5rem;
        height: 5rem;
        object-fit: contain;
        margin-bottom: 0;
    }

    @keyframes scrollLoop {
        0% { transform: translateY(0); }
        100% { transform: translateY(-50%); }
    }

    .designDPM-mobileScroll {
        display: none;
        width: 100%;
        height:3rem;
        overflow: hidden;
        position: relative;
        flex-shrink: 0;
    }

    .designDPM-mobileTrack {
        display: flex;
        animation: scrollX 5s linear infinite;
        will-change: transform;
    }

    .designDPM-mobileTrack img {
        width: 3rem;
        height: 3rem;
        object-fit: contain;
        flex-shrink: 0;
    }

    @keyframes scrollX {
        0% { transform: translateX(0); }
        100% { transform: translateX(-50%); }
    }

    .designDPM-center {
        flex: 1;
        max-width: 75rem;
        padding: 0 1rem;
        text-align: center;
        z-index: 10;
    }

    .designDPM-title {
        font-size: 1.8rem;
        margin-bottom: 1.5rem;
        color: var(--theme-color);
        font-weight: 700;
    }

    .designDPM-content {
        font-size: 1rem;
        color: var(--theme-color);
        line-height: 1.8;
        text-align: center;
        z-index: 10;
    }

    .designDPM-content strong {
        color: var(--theme-color);
        font-weight: 600;
    }

    @media (max-width: 768px) {
        .designDPM-wrapper {
            flex-direction: column;
            //height: 100vh;
            overflow: hidden;
        }

        .designDPM-side {
            display: none;
        }

        .designDPM-title {
            font-size: 1.5rem;
        }

        .designDPM-content {
            font-size: 0.95rem;
        }

        .designDPM-center {
            flex: 1;
            overflow-y: auto;
            //padding-bottom: 1rem;
        }

        .designDPM-mobileScroll {
            display: block;
        }
    }
</style>

